@model ContactsApp.Models.ContactViewModel

@{
    ViewBag.Title = "EditContact";
}

<h2>EditContact</h2>

@using (Html.BeginForm("UpdateContact", "Home", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ContactID);

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="Surname">Surname</label>
        <input type="text" class="form-control" name="Surname" placeholder="Surname" value="@Model.Surname">
    </div>
    <div class="form-group">
        <label for="Age">Age</label>
        <input type="number" class="form-control" name="Age" placeholder="Age" value="@Model.Age">
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" name="Address" placeholder="Address" value="@Model.Address">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
}
